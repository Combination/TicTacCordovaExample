<div class="app">
    {{tic-tac-toe-header}}

    <div class="controls">
        <p class="status o" style="display:none;">Вы выиграли <a href="javascript:void(0)" class="close">✕</a></p>
        <p class="status x" style="display:none;">Вы проиграли!<a href="javascript:void(0)" class="close">✕</a></p>
        <p class="status" style="display:none;">Ничья!<a href="javascript:void(0)" class="close">✕</a></p>
        <p>
            <button class="btn x" {{action 'startGame' gameInitWith.CROSS}}>Начать новую игру <br> <b>Крестиком</b></button>
            <button class="btn o" {{action 'startGame' gameInitWith.ZERO}}>Начать новую игру <br> <b>Ноликом</b></button>
        </p>
    </div>

    <div class="content">
        <table cellspacing="0" cellpadding="0">
            <tr>
                <td>{{tic-tac-toe-field-item}}</td>
                <td>{{tic-tac-toe-field-item}}</td>
                <td>{{tic-tac-toe-field-item}}</td>
            </tr>

            <tr>
                <td>{{tic-tac-toe-field-item}}</td>
                <td>{{tic-tac-toe-field-item}}</td>
                <td>{{tic-tac-toe-field-item}}</td>
            </tr>
            <tr>
                <td>{{tic-tac-toe-field-item}}</td>
                <td>{{tic-tac-toe-field-item}}</td>
                <td>{{tic-tac-toe-field-item}}</td>
            </tr>
        </table>
    </div>
</div>